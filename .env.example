# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication (when you add auth)
# NEXTAUTH_SECRET="your-secret-key"
# NEXTAUTH_URL="http://localhost:3000"

# OpenAI Configuration (Required for AI Habit Generation)
# Get your API key from: https://platform.openai.com/api-keys
# The AI habit generation feature requires a valid OpenAI API key
OPENAI_API_KEY=your-openai-api-key-here

# Optional: OpenAI Model Configuration
OPENAI_MODEL=gpt-5.1

# Maximum tokens for AI responses (affects response length and cost)
OPENAI_MAX_TOKENS=2000

# Temperature controls creativity (0.0 = focused, 1.0 = creative)
OPENAI_TEMPERATURE=0.7

# External APIs (when you integrate external services)
# STRIPE_SECRET_KEY="your-stripe-secret-key"

# Email Service (when you add email functionality)
# SMTP_HOST="your-smtp-host"
# SMTP_PORT=587
# SMTP_USER="your-smtp-user"
# SMTP_PASS="your-smtp-password"
